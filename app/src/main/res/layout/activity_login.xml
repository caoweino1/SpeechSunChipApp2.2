<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/color_blue"
        android:orientation="vertical"
        android:id="@+id/base_header"
        android:layout_width="match_parent"
        android:layout_height="80dp" >
        <TextView

            android:layout_centerInParent="true"
            android:text="@string/turingsdk_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:text="aecdc3aa66824f6a9c84ac1b1531e698"
                android:id="@+id/et_apikey"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_gray"
                android:hint="@string/apikey"
                android:textAlignment="center" />

            <EditText
                android:text="3o2f613l84323Xau"
                android:id="@+id/et_secret"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_gray"
                android:hint="@string/secret_hint"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/login" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>