<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_air_init"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="初始化AirKiss" />

        <Button
            android:id="@+id/btn_start_airkiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始Airkiss3.0" />

        <Button
            android:id="@+id/btn_stop_airkiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止开始Airkiss3.0" />


        <Button
            android:id="@+id/btn_mqtt_init"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="初始化MQTT" />

        <Button
            android:id="@+id/btn_mqtt_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接MQTT" />


        <Button
            android:id="@+id/btn_mqtt_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MQTT发送" />

        <Button
            android:id="@+id/btn_mqtt_disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MQTT断开" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/btn_airkiss_qrcode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/qrcode" />
    </LinearLayout>
</ScrollView>
